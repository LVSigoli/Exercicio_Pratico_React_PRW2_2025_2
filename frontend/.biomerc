{
  "root": true,
  "formatter": {
    "indent_style": "space",
    "indent_size": 2,
    "quotes": "single",
    "semi": false,
    "trailing_comma": "es5",
    "max_line_length": 80
  },
  "linter": {
    "enabled": true,
    "rules": {
      "no_unused_vars": "error",
      "eqeqeq": "error",
      "react/react-in-jsx-scope": "off"
    }
  }
}
